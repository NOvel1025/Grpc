FROM centos:7

ENV LANG="ja_JP.UTF-8"
RUN export HTTP_PROXY=http://proxy.jec.ac.jp:8080/
RUN echo proxy=http://proxy.jec.ac.jp:8080/ >> /etc/yum.conf
RUN yum install -yt https://rpms.remirepo.net/enterprise/remi-release-7.rpm
RUN yum -yt install php80 php80-php php80-php-bcmath php80-php-json php80-php-mbstring php80-php-pdo php80-php-xml php80-php-mysqlnd --enablerepo=remi-php80
RUN yum install -yt --nogpgcheck zip unzip